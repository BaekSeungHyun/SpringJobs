<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ProjectMapper">
	<resultMap id="projectSelectMap" type="com.springjobs.domain.Cpjts">
		<result property="cpjno" 			column="CPJNO" 		jdbcType="INTEGER"/>
		<result property="name"				column="CPJNM" 		jdbcType="VARCHAR" />
		<result property="introduction" 	column="CPJINT" 	jdbcType="VARCHAR" />
		<result property="skill" 			column="CPJSK" 		jdbcType="VARCHAR" />
		<result property="check" 			column="CPJCHK" 	jdbcType="CHAR" />
		<result property="skillyear" 		column="CPJYR"  	jdbcType="VARCHAR" />
		<result property="people" 			column="CPJNPL" 	jdbcType="INTEGER" />
		<result property="minpay" 			column="CPJMNP" 	jdbcType="INTEGER" />
		<result property="maxpay" 			column="CPJMAP" 	jdbcType="INTEGER" />
		<result property="clicktimes" 		column="CPJHTN" 	jdbcType="INTEGER" />
		<result property="regdate" 			column="CPJRD" 	 	jdbcType="DATE" />
		<result property="writer" 			column="CPJRG" 		jdbcType="VARCHAR" />
		<result property="worktype" 		column="CPJWT" 		jdbcType="VARCHAR" />
		<result property="area" 			column="CPJAR" 		jdbcType="VARCHAR" />
	</resultMap>
	
	<!-- SQL : INSERT -->
	<insert 	id="addProject"		parameterType="com.springjobs.domain.Cpjts" >
	 	INSERT
		INTO CPJTS(cpjnm, cpjint, cpjsk, cpjchk, cpjyr, cpjnpl, cpjmnp, cpjmap, cpjhtn, cpjrd, cpjrg, cpjwt, cpjar, cno) 
		VALUES(#{cpjnm},#{cpjint},#{cpjsk},#{cpjchk},#{cpjyr},#{cpjnpl},#{cpjmnp},#{cpjmap},1,#{cpjrd},#{cpjrg},#{cpjwt},#{cpjar},1);
	 </insert>

</mapper>